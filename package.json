{
  "name": "twootle-desktop",
  "version": "0.1.3",
  "description": "Twootle English School - Desktop Electron App",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build:css": "tailwindcss -i src/tailwind.css -o tailwind.css --minify",
    "package": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:win32": "electron-builder --win --ia32",
    "dist:win64": "electron-builder --win --x64"
  },
  "build": {
    "appId": "org.twootle.app",
    "productName": "Twootle",
    "icon": "src/icon.png",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist",
      "!node_modules/.cache"
    ],
    "extraMetadata": {
      "main": "electron-main.js"
    },
    "mac": {
      "category": "public.app-category.education"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ],
      "publisherName": "Twootle",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "extraFiles": [
        {
          "from": "app.manifest",
          "to": "app.manifest"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Twootle",
      "runAfterFinish": true
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Education"
    }
  },
  "author": "Twootle",
  "license": "UNLICENSED",
  "devDependencies": {
    "electron": "^31.2.0",
    "electron-builder": "^24.13.3",
    "tailwindcss": "^3.4.13"
  }
}
